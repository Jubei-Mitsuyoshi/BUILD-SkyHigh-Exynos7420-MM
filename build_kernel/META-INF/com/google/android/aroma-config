	);

	ini_set("text_next", "<~text_next>");
	ini_set("icon_next", "@next");

	install(
		"<~inst.title>",
		"\n" +
		"<~inst.text>" +
		"",
		"@install"
	);

	ini_set("text_next", "<~inst.finish.button>");
