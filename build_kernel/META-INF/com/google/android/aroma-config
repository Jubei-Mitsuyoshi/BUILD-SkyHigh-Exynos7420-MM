################################# Aroma config for SkyHigh kernels by UpInTheAir ##################################

ini_set("rom_name",		"SkyHigh 7420 Kernel");
ini_set("rom_version",		"v6.7.0");
ini_set("rom_author",		"UpInTheAir");
ini_set("rom_device",		"Exynos7420");
ini_set("rom_date",		"16th November 2016");

splash(
	2000,
	"splash/a1"
);

fontresload( "0", "ttf/Roboto-Regular.ttf;ttf/DroidSansArabic.ttf;ttf/DroidSansFallback.ttf;", "12" );

loadlang("langs/en.lang");
fontresload( "0", "ttf/Roboto-Regular.ttf", "12" );
fontresload( "1", "ttf/Roboto-Regular.ttf", "18" );

theme("touchwiz");

###################################################################################################################

viewbox(
	"<~welcome.title>",
	"<~welcome.text1>"+

	"\n\n"+

	"<~welcome.text2>\n\n"+

	"  <~welcome.version>\t: <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
	"  <~welcome.author>\t: <b><#selectbg_g>"+ini_get("rom_author")+"</#></b>\n"+
	"  <~welcome.released>\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+

	"<~welcome.next>",

	"@welcome"
);

###################################################################################################################

agreebox(
	"<~terms.title>",
	"<~terms.desc>",

	"@license",

	resread("license/en.txt"),

	"<~terms.check>",
	"<~terms.confirm>"
);

###################################################################################################################

menubox(
	"<~main.title>",
	"<~main.subtutle>",

	"@apps",

	"menu.prop",

	"<~main.inst>",			"<~main.instdesc>",					"@install",
	"<~main.sysinfo>",		"<~main.sysinfodesc>",					"@info",
	"<~main.changelog>",		"<~main.changelogdesc>",				"@agreement",
	"<~main.quit>",			"<~main.quitdesc>",					"@alert"

);

###################################################################################################################

if prop("menu.prop","selected") == "2" then

	pleasewait("<~sysinfo.wait>");
	setvar(
		"sysinfo",

		"\n"+

		"<~sysinfo.device>"+"\t\t:  <b><#selectbg_g>"+sysprop("ro.build.product")+"</#></b>\n"+
		"<~sysinfo.board>"+"\t\t: <b><#selectbg_g>"+sysprop("ro.product.board")+"</#></b>\n"+
		"<~sysinfo.manufac>"+"\t: <b><#selectbg_g>"+sysprop("ro.product.manufacturer")+"</#></b>\n\n"+

		"<~sysinfo.system>"+"\t: <b><#selectbg_g>"+getdisksize("/system","m")+" MB</#></b>\n"+
		"Free\t\t\t: <b><#selectbg_g>"+getdiskfree("/system","m")+" MB</#></b>\n\n"+
		"<~sysinfo.data>"+"\t\t: <b><#selectbg_g>"+getdisksize("/data","m")+" MB</#></b>\n"+
		"Free\t\t\t: <b><#selectbg_g>"+getdiskfree("/data","m")+" MB</#></b>\n\n"+
		""
	);

	textbox(
		"<~sysinfo.title>",
		"<~sysinfo.subtitle>",

		"@info",

		getvar("sysinfo")
	);

	alert(
		"<~sysinfo.alert.title>",
		"<~sysinfo.alert.text>",

		"@alert"
	);

	back("2");

endif;

###################################################################################################################

if prop("menu.prop","selected") == "3" then

	textdialog(
		"<~changelog.title>",

		resread("changelog/en.txt"),
		"<~changelog.exit>"
	);

	back("1");

endif;

###################################################################################################################

if prop("menu.prop","selected") == "4" then

	if
		confirm(
			"<~quit.title>",
			"<~quit.text>",

			"@alert"

		) == "yes"
	then
		exit("");
	else
		back("1");
	endif;
endif;

