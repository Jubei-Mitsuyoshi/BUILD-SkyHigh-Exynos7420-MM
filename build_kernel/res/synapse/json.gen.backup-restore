				on:APPLY,
				do:[ REFRESH, APPLY ],
				to:"restorebackup pickconfig"
			}
		]
	}},
	{ SSpacer:{
		height:2
	}},
	{ SPane:{
		title:"Kernel Image"
	}},
	{ SSpacer:{
		height:1
	}},
	{ SGeneric:{
		title:"Kernel Name",
		description:"",
		default:"None",
		action:"backup /res/synapse/SkyHigh/bck_kernel",
	}},
	{ SSpacer:{
		height:1
	}},
	{ SDescription:{
